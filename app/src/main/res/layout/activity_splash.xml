<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.myapplication.monitor.Activities.SplashActivity">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/actions"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="@string/contemporary_wiretapping_using_android_geofencing_with_a_centralized_content_management_system"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/bgGrey"
            android:padding="10dp"
            android:layout_marginRight="50dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/by_jayapriya"
            android:gravity="center|right"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
